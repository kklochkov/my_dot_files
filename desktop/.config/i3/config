# my_i3_status binding
set $my_i3_status python3 -u ~/develop/my_dot_files/common/my_i3_status.py -m i3 -d /dev/mapper/vgubuntu-root
# https://i3wm.org/docs/i3status.html#_signals
set $my_i3_status_refresh pkill -SIGUSR1 -f '^python3 -u .+my_i3_status.py -m i3 -d /dev/mapper/vgubuntu-root'

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# lock
# taken from https://gitlab.com/dwt1/wallpapers/-/blob/master/0290.jpg
set $wallpaper /home/kklochkov/Pictures/0290.png
# https://github.com/Raymo111/i3lock-color
#bindsym $mod+l exec i3lock -e -f -i $wallpaper
bindsym $mod+l exec i3lock -e -f -i $wallpaper --scale --clock --time-color=ffffffff --date-color=ffffffff

# Pulse Audio controls, use 'pactl list sinks' to query sinks
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $my_i3_status_refresh # increase vol volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $my_i3_status_refresh # decrease vol volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && pactl set-source-mute @DEFAULT_SOURCE@ toggle && $my_i3_status_refresh # toggle both volume and mic

bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pactl set-source-volume @DEFAULT_SOURCE@ +5% && $my_i3_status_refresh # increase mic volume
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-source-volume @DEFAULT_SOURCE@ -5% && $my_i3_status_refresh # decrease mic volume
bindsym Shift+XF86AudioMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $my_i3_status_refresh # mute mic

# if XF86AudioMicMute doesn’t work then value
# evdev:atkbd:dmi:bvn*:bvr*:bd*:svnHP*:pnHPZBook*:pvr* needs to be added in
# /lib/udev/hwdb.d/60-keyboard.hwdb (or create a new /lib/udev/hwdb.d/70-keyboard.hwdb) after
# # HP ZBook comment
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle  && $my_i3_status_refresh # mute mic

# Sreen brightness controls, use 'sudo apt install xbacklight' to install xbacklight
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5 && $my_i3_status_refresh # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 && $my_i3_status_refresh # decrease screen brightness

