alias clear_ram_caches='sync; sudo sh -c "echo 2 > /proc/sys/vm/drop_caches && swapoff -a && swapon -a"'
alias ssh_add='eval $(ssh-agent) && ssh-add ~/.ssh/id_rsa'

# to start tmux on the localhost
alias tmux_ln='ssh_add && tmux new-session -s kklochkov-bbox'
alias tmux_la='tmux attach -d -t kklochkov-bbox'
# to start tmux under mosh
alias tmux_rn='ssh_add && DISPLAY=:1 tmux new-session -s kklochkov-bbox'
alias tmux_ra='DISPLAY=:1 tmux attach -d -t kklochkov-bbox'
# mosh needs to be built from sources, becuase this fix https://github.com/mobile-shell/mosh/issues/961
# is not present in the latest 1.3.2 version of mosh :(
export PATH=$PATH:~/develop/mosh/bin
export MANPATH=$MANPATH:~/develop/mosh/share/man
# tmux needs to be built from sources to have proper clipboard support
# see https://github.com/tmux/tmux/wiki/Clipboard#how-to-configure---tmux-32-and-later
export PATH=$PATH:~/develop/tmux/bin
export MANPATH=$MANPATH:~/develop/tmux/share/man

# https://the.exa.website/
export PATH=$PATH:~/develop/exa/target/release
export MANPATH=$MANPATH:~/develop/exa/man

export VISUAL=vi
export EDITOR="$VISUAL"

# nodejs
export PATH=$PATH:~/develop/node-v18.13.0-linux-x64/bin

# remap capslock for whole system to ESC (X only)
setxkbmap -option caps:escape

# german layout
setxkbmap de
