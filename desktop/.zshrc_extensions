alias clear_ram_caches='sync; sudo sh -c "echo 2 > /proc/sys/vm/drop_caches && swapoff -a && swapon -a"'
alias ssh_add='eval $(ssh-agent) && ssh-add ~/.ssh/id_ed25519'

export VISUAL=vi
export EDITOR="$VISUAL"
export DISPLAY=:1 # required for xclip/xsel while using remote connection

alias ell="exa -ahl"

plugins=(
  git
  colorize
  colored-man-pages
  zsh-syntax-highlighting
  zsh-interactive-cd
  zsh-navigation-tools
  zsh-autosuggestions
  zsh-autocomplete
)

# remap capslock for whole system to ESC (X only)
setxkbmap -option caps:escape

# german layout
setxkbmap de
