{
  // to generate correct paths for clangd, run `bazel run @hedron_compile_commands//:refresh_all`
  // inside of the project root
  "clangd.path": "${cwd}/external/llvm_toolchain_llvm/bin/clangd",
  "clangd.semanticHighlighting": true,
  "clangd.enabled": true,
  "clangd.arguments": [
      "-j",
      "16",
      "--header-insertion=never",
      "--clang-tidy",
      "--background-index=1",
      "--log=verbose",
      "--query-driver=${cwd}/external/toolchains_llvm~~llvm~llvm_toolchain_llvm/bin/**"
  ],
  "clangd.inlayHints.enable": false,
  "clangd.fallbackFlags": ["-std=c++17"],
  "inlayHint.enable": false,
  "explorer.file.showHiddenFiles": true,
  "explorer.file.reveal.auto": true,
  "explorer.mouseMode": "singleclick",
  "explorer.focus": false,
  "explorer.icon.enableNerdfont": true
}
