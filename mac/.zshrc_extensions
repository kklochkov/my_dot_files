alias ssh_add='eval $(ssh-agent) && ssh-add ~/.ssh/id_rsa'
# mosh needs to be built from sources, becuase this fix https://github.com/mobile-shell/mosh/issues/961
# is not present in the latest 1.3.2 version of mosh :(
alias mosh_bbox='ssh_add && mosh kklochkov-bbox --ssh="ssh -X" --server="~/develop/mosh/bin/mosh-server"' # -X makes xclip/xsel to work

no_machine()
{
  /Applications/NoMachine.app/Contents/MacOS/nxplayer --session kklochkov-bbox.nxs & disown && exit
}

# mosh goes mental if locale donesn't match one on the server
export LANG=en_US.UTF-8 LC_CTYPE=en_US.UTF-8
export VISUAL=nvim
export EDITOR="$VISUAL"
export PATH=$PATH:~/develop/mosh/bin

alias exa_ls="exa -ahl"
